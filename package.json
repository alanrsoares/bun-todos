{
  "name": "bun-todos",
  "version": "1.0.44",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"bun watch\" \"bun tw:dev\"",
    "tw": "bunx tailwindcss -i ./src/globals.css -o ./public/styles.css",
    "watch": "bun run --watch src/index.tsx",
    "tw:dev": "bun run tw --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "drizzle:generate": "bun drizzle-kit generate:sqlite",
    "drizzle:up": "bun drizzle-kit up:sqlite",
    "drizzle:push": "bun drizzle-kit push:sqlite",
    "drizzle:studio": "bun drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/backend": "^0.38.3",
    "@clerk/themes": "^1.7.9",
    "@elysiajs/html": "^0.8.0",
    "@libsql/client": "^0.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "daisyui": "^4.7.3",
    "drizzle-orm": "^0.29.5",
    "elysia": "^0.8.17",
    "elysia-clerk": "^0.3.1",
    "prettier": "^3.2.5",
    "rambda": "^9.1.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tiny-invariant": "^1.3.3",
    "typed-html": "^3.0.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "bun-types": "latest",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "prettier-plugin-tailwindcss": "^0.5.12"
  },
  "module": "src/index.js"
}

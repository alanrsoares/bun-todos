{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["@types/bun"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "elements.createElement",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
